<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="caster.fast.start.springboot.ssm.dao.UserDAO">

  <select id="findAllUser" resultType="caster.fast.start.springboot.ssm.pojo.User">
    select * from user;
  </select>

  <select id="findUserByName" resultType="caster.fast.start.springboot.ssm.pojo.User">
    select * from user where name = #{name};
  </select>

</mapper>